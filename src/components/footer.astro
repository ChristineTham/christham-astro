---
import { Icon } from 'astro-icon'
import { SiteMetadata, Logo } from '../config'
import Img from '../components/img.astro'
---

<div class="h-24 lg:h-16"></div>
<footer class="text-rosely1 dark:text-rosely7">
  <div class="fixed z-20 bottom-0 inset-x-0 bg-rosely6 dark:bg-rosely8 px-4 lg:px-8 py-1 lg:py-4 w-full flex items-center lg:flex-row flex-col border-t-2 border-roselyB" >
    <span class="flex-none flex flex-row items-center">
      <a class="flex title-font font-medium items-center lg:justify-start justify-center" href={import.meta.env.BASE_URL} >
        <Img src={Logo} alt="Footer Logo" class="dark:bg-rosely3 h-6 w-6" />
        <span class="sr-only">Logo</span>
      </a>
      <p class="text-sm ml-2 pl-2 border-l-2 border-roselyB py-1" >
        Â© {new Date().getFullYear()} MIT licence
        <a
          href="https://hellotham.com"
          class="ml-1 text-rosely9 hover:text-roselyC dark:text-roselyB dark:hover:text-rosely5"
          rel="noopener noreferrer"
          target="_blank"
        >
          Hello Tham Pty Ltd
        </a>
      </p>
    </span>
    <span class="flex-none flex flex-row items-center">
      <p class="text-sm lg:ml-4 lg:pl-4 lg:border-l-2 lg:border-roselyB lg:py-1"
      >
        <a
          href={import.meta.env.BASE_URL + 'privacy'}
          class="ml-1 text-rosely9 hover:text-roselyC dark:text-roselyB dark:hover:text-rosely5"
        >
          Privacy Policy
        </a>
      </p>
      <p
        class="text-sm ml-4 pl-4 border-l-2 border-roselyB py-1"
      >
        <a
          href={import.meta.env.BASE_URL + 'rss.xml'}
          class="ml-1 text-rosely9 hover:text-roselyC dark:text-roselyB dark:hover:text-rosely5"
          rel="noopener noreferrer"
          target="_blank"
        >
          RSS
        </a>
      </p>
      <p
        class="text-sm ml-4 pl-4 border-l-2 border-roselyB py-1"
      >
        <a
          href={import.meta.env.BASE_URL + 'sitemap-index.xml'}
          class="ml-1 text-rosely9 hover:text-roselyC dark:text-roselyB dark:hover:text-rosely5"
          rel="noopener noreferrer"
          target="_blank"
        >
          Sitemap
        </a>
      </p>
    </span>
    <span
      class="grow inline-flex lg:ml-auto justify-center lg:justify-end mt-2 lg:mt-0"
    >
      {
        SiteMetadata.social.map(s =>
          s.link ? (
            <a
              href={s.link}
              class="ml-3 text-rosely9 hover:text-roselyC dark:text-roselyB dark:hover:text-rosely5"
              rel="noopener noreferrer"
              target="_blank"
            >
              <Icon pack="bi" name={s.icon} class=" h-5 w-5" />
              <span class="sr-only">{s.name}</span>
            </a>
          ) : (
            ''
          )
        )
      }
    </span>
  </div>
</footer>
