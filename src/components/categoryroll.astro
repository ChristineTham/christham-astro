---
import { categoryDetail } from '../config'
import SVGImg from './svgimg.astro'
export interface Props {
  categories: string[]
}

const { categories } = Astro.props
---

<div class="max-w-none mx-auto p-4 sm:px-6 lg:px-8">
    <div class="space-y-0 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-x-6">
      {
        categories.map(category => (
          <div class="group">
            <a href={`${import.meta.env.BASE_URL}category/${category}/`}>
              <div class="relative mb-4 bg-rosely7 dark:bg-rosely8 rounded-lg overflow-hidden group-hover:opacity-75 aspect-w-1 aspect-h-1 shadow-xl">
                <SVGImg
                src={categoryDetail(category).icon}
                alt={categoryDetail(category).description}
                class="w-full h-full object-center object-cover"
                />
              </div>
              <h3 class="inline-block py-1 px-3 rounded bg-rosely9 hover:bg-roselyC text-white text-xs font-medium tracking-tight uppercase">
                {category}
              </h3>
              <p class="text-base text-rosely1 dark:text-rosely6">
                {categoryDetail(category).description}
              </p>
            </a>
          </div>
        ))
      }
    </div>
</div>
