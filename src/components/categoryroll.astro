---
import type { CollectionEntry } from 'astro:content'

interface Props {
  categories: CollectionEntry<'category'>[]
}
const { categories } = Astro.props
---

<div itemprop="mainEntity" itemscope itemtype="https://schema.org/CollectionPage" class="max-w-none mx-auto p-4 sm:px-6 lg:px-8">
    <div class="space-y-0 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-x-6">
      {
        categories
          .filter(cat => cat.slug != 'website')
          .map(category => (
          <div class="group">
            <a itemprop="url" href={`${import.meta.env.BASE_URL}category/${category.slug}/`}>
              <div class="relative mb-4 bg-rosely5 dark:bg-rosely8 rounded-lg overflow-hidden group-hover:opacity-75 aspect-w-1 aspect-h-1 shadow-xl">
                <img
                  src={category.data.icon.src}
                  alt={category.data.description}
                  class="w-full h-full object-center object-cover"
                  />
              </div>
              <h3 itemprop="name" class="inline-block py-1 px-3 rounded bg-rosely9 hover:bg-roselyC text-white text-xs font-medium tracking-tight uppercase">
                {category.data.title}
              </h3>
              <p itemprop="abstract description" class="text-base text-rosely1 dark:text-rosely6">
                {category.data.description}
              </p>
            </a>
          </div>
        ))
      }
    </div>
</div>
