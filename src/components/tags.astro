---
export interface Props {
  tags?: string[]
}

const { tags } = Astro.props
---
{tags &&
  <div class="flex flex-row flex-wrap items-start gap-4 lg:gap-2 mt-2">
    {
      tags.map(tag => (
        <a
          href={`${import.meta.env.BASE_URL}tag/${encodeURIComponent(tag)}/`}
          class="inline-block py-2 lg:py-1 px-2 rounded text-rosely9 hover:bg-roselyB hover:text-roselyC bg-rosely7 dark:text-roselyB dark:hover:bg-rosely8 dark:hover:text-rosely7 dark:bg-rosely1 font-semibold text-xs"
        >
          #{tag}
        </a>
      ))
    }
  </div>
}
